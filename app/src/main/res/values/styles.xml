<resources>

    <color name="light_gray">#FFFFFF</color>
    <color name="primary">#9FA8DA</color>
    <color name="primary_dark">#3F51B5</color>
    <color name="accent">#5C6BC0</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <style name="LayoutTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="android:background">#ffe8e8e8</item>
    </style>
    <style name="AppTitle" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="AppButtons" parent="AppTheme">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppButton" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:background">#fff08c35</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#000000</item>

    </style>

</resources>
